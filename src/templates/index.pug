extends _layout/layout

//- Các giá trị mặc định cho trang web
block variables
	- var title = 'Home'
	- var description = 'Description for home page'
	- var bodyclass = 'home'

//- Phần khai báo body
block body
	//- Bạn viết code vào đây nhớ là phải mở đầu bằng section ở mỗi khối
	section.home-slider
		.slider1.owl-carousel.owl-theme
			.item
				figure
					img.img-fluid(src="img/home_slider_1.png", alt="")
				.text-slider
					p.so0
						span.so1 PT EVENTS 
						span.so2 - Ghi lại dấu ấn hạnh phúc của cuộc đời bạn
					a.btn Xem thêm
			.item
				figure
					img.img-fluid(src="img/home_slider_2.png", alt="")
				.text-slider
					p.so3 Đồng hành cùng bạn tạo ra những khoảnh khắc tuyệt vời nhất
					a.btn Xem thêm
			.item
				figure
					img.img-fluid(src="img/home_slider_3.png", alt="")
				.text-slider
					p.so4 Chương trình Team building Cướp Biển Vùng Caribe
					a.btn Xem thêm
	section.home-about
		.container
			.row
				.col-sm-6
					.about-trai
						p VỀ CHÚNG TÔI
						P PT EVENT
						p Với mong muốn cập nhật những xu thế mới và sáng tạo cho khách hàng, PT event đang ngày một hoàn thiện để trở thành công ty cung cấp dịch vụ tổ chức sự kiện chuyên nghiệp, sáng tạo và hiệu quả.
						p Chúng tôi lấy con người làm nền tảng để làm việc và hướng tới phục vụ, chính vì vậy đội ngũ nhân sự của PT event luôn làm việc với tinh thần trách nhiệm cao, tận tâm và sáng tạo. Đồng thời, chúng tôi luôn lắng nghe khách hàng, tìm kiếm và đột phá trong việc đưa ra các giải pháp để mục đích cuối cùng là mang lại cho quý khách hàng những trải nghiệm tuyệt vời và hài lòng nhất.
				.col-sm-6
					figure
						img.img-fluid(src="img/home_envent_video_background.png", alt="")
